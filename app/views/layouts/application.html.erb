<!DOCTYPE html>
<html>
<head>
  <title>KanaGame</title>
  <%= csrf_meta_tags %>
  <%= action_cable_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div id="material_header">
    <div id="material_header_content" class="container">
      <div id="currently_logged_in">
        <% if current_user %>
            You are logged in as <%= current_user.nickname %>
            <br>
            <%= link_to 'logout', logout_path %>
        <% else %>
            Pls <%= link_to 'login', login_path %>
        <% end %>
      </div>
    </div>
  </div>
  <div id="material_body">
    <div id="material_body_content" class="container">
      <%= console %>
      <%= yield %>
    </div>
  </div>
  <div id="material_footer"></div>
</body>
</html>
